package training.iqgateway.repositories;

import java.util.List;
import java.util.Optional;

import org.springframework.data.mongodb.repository.MongoRepository;
import org.springframework.stereotype.Repository;

@Repository
public interface InsurancePlanRepository extends MongoRepository<InsurancePlan, String> {
    List<InsurancePlan> findByIsActiveTrue();
    Optional<InsurancePlan> findByPlanNameAndIsActiveTrue(String planName);
    List<InsurancePlan> findByPlanProviderAndIsActiveTrue(String planProvider);
}
